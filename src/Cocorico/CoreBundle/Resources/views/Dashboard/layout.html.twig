{% extends '::base.html.twig' %}

{% trans_default_domain 'cocorico' %}

{% block layout %}

    {% include '@CocoricoCore/Frontend/Common/_header.html.twig' with {
       'header_class': 'header-fixed dashboard'} only %}

    <!-- contain main informative part of the site -->
    <main id="main" class="dashboard_header" role="main">
        <div class="container">
            <div class="row">
                <!-- breadcrumbs -->
                {{ render(controller('CocoricoBreadcrumbBundle:Breadcrumbs:index',{
                    request: app.request
                })) }}

                <!-- main-tabs -->
                <div class="main-tabs col-xs-12">
                    <!-- tabs -->
                    <div role="tabpanel">
                        <!-- form-switchers -->
                        {{ render(controller("CocoricoUserBundle:Dashboard/Profile:profileSwitch")) }}

                        {% block nav_dashboard -%}
                            {% include 'CocoricoCoreBundle:Dashboard/Common:_nav.html.twig' with {
                            'nav_dashboard_current': nav_dashboard_current
                            } only %}
                        {%- endblock %}

                        <div class="tab-content">
                            {% block main_dashboard %}

                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {#popin#}
        {% block modal %}{% endblock %}
        
        {% include '@CocoricoCore/Frontend/Common/_footer.html.twig' only %}
    </main>

{% endblock %}

