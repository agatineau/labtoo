{% trans_default_domain 'cocorico_mail' %}

{% block subject -%}
    {% autoescape false %}
    {{ 'booking_deferred_by_asker_asker.email.subject'|trans({
        '%booking_uid%': booking.id
    }, 'cocorico_mail', user_locale) }}
    {% endautoescape %}
{%- endblock %}

{% block message %}
    {{ 'booking_deferred_by_asker_asker.email.message'|trans({
        '%firstname%': user.firstName,
        '%booking_start_date%': booking.start|localizeddate('short', 'none', 'fr'),
        '%booking_end_date%': booking.end|localizeddate('short', 'none', 'fr'),
        '%booking_uid%': booking.id,
        '%booking_url%': booking_url,
        '%listing_title%': listing.title
    }, 'cocorico_mail', user_locale) }}
{% endblock %}

{% block body_text %}
    {% autoescape false %}
    {{ message }}
    {% endautoescape %}
{% endblock %}

{% block body_html %}
    {% embed "@CocoricoCore/Mails/layout.html.twig" %}
        {% trans_default_domain 'cocorico_mail' %}

        {% block content %}
            {% autoescape false %}
            {{ message|raw|nl2br }}
            {% endautoescape %}
            {#Do not remove this comment. It is used for BDD testing #}
            <!--booking_deferred_by_asker_asker-->
        {% endblock %}
    {% endembed %}
{% endblock %}
